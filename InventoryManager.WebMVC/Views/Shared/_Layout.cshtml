@using InventoryManager.WebMVC.Helpers
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - What's In My Bag?</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("What's In My Bag?", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="navButton" id="navCharacter"><a href="@Url.Action("Index", "Character")"></a></li>
                        <li class="navButton" id="navItem"><a href="@Url.Action("Index", "Item")"></a></li>
                        <li class="navButton" id="navBag"><a href="@Url.Action("Create", "Backpack")"></a></li>
                    }
                    <li class="navButton" id="navAbout"><a href="@Url.Action("About", "Home")"></a></li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    @{
        var name = Html.CurrentViewName();
        var controller = Html.ControllerName();
        if (name == "Index" && controller == "HomeController")
        {
            <div class="jumbotron">
                <div class="container-fluid">
                    <h1>What's In My Bag?</h1>
                    <p class="lead">
                        What's In My Bag? is a great way to maintain how many potions you have in that
                        bag of holding and protecting your characters' valuable treasures from smudges and spills.
                    </p>
                </div>
            </div>
        }
        else if (name == "Index" && controller == "CharacterController")
        {
            <div class="jumbotron jumbotronAlt">
                <div class="container-fluid ">
                    <h1>Character List</h1>
                </div>
            </div>
        }
        else if (name == "Index" && controller == "ItemController")
        {
            <div class="jumbotron jumbotronAlt">
                <div class="container-fluid ">
                    <h1>Item List</h1>
                </div>
            </div>
        }
        else if (name == "Create" && controller == "CharacterController")
        {
            <div class="jumbotron jumbotronAlt">
                <div class="container-fluid ">
                    <h1>Create a Character</h1>
                    <h3>Fill out the form below to create a new character profile</h3>
                </div>
            </div>
        }
        else if (name == "Create" && controller == "ItemController")
        {
            <div class="jumbotron jumbotronAlt">
                <div class="container-fluid ">
                    <h1>Create an Item</h1>
                    <h3>Fill out the form below to create a new item</h3>
                </div>
            </div>
        }
        else if (name == "Create" && controller == "BackpackController")
        {
            <div class="jumbotron jumbotronAlt">
                <div class="container-fluid ">
                    <h1>Fill Your Character's Bag</h1>
                    <h3>Choose a character and an item to put in their bag</h3>
                </div>
            </div>
        }
    }

    <div class="container body-content">
        @RenderBody()
    </div>
    <footer class="footer">
        <ul class="nav navbar-nav">
            <li class="footerSword"><a></a></li>
            <li>&copy; @DateTime.Now.Year - What's In My Bag?</li>
            <li class="footerSword"><a></a></li>
        </ul>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
